###############################
# Auto E-Commerce Environment
# Copy this file to `.env` and adjust values.
###############################

# --- Core Runtime ---
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=change-me-min-32-characters

# --- Database ---
DATABASE_URL=postgresql://postgres:password@localhost:5432/auto_ecommerce?schema=public

# --- Logging ---
LOG_LEVEL=info
LOG_PRETTY=false

# --- Redis / Queue (optional) ---
REDIS_URL=redis://localhost:6379

# --- Object Storage (optional) ---
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=auto-ecommerce-assets
CLOUDINARY_CLOUD_NAME=

# --- Translation Providers (optional) ---
GOOGLE_TRANSLATE_API_KEY=
DEEPL_API_KEY=
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=
OPENAI_API_KEY=

# --- Payment Providers (optional) ---
TOSS_SECRET_KEY=
TOSS_WEBHOOK_SECRET=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# --- Marketplaces (optional) ---
ELEVENST_API_KEY=
ELEVENST_API_SECRET=
ELEVENST_BASE_URL=https://openapi.11st.co.kr
COUPANG_ACCESS_KEY=
COUPANG_SECRET_KEY=
COUPANG_VENDOR_ID=
COUPANG_BASE_URL=https://api-gateway.coupang.com

# --- Feature Flags & Defaults ---
DEFAULT_MARGIN_RATE=0.2
CUSTOM_KEY=
